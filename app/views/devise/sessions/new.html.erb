<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <%=image_tag 'logo.jpg', width: 100, class: 'mb-4'%>
  <h1 class="h3 mb-3 font-weight-normal">Vamos acessar nosso ponto?</h1>
  <label for="inputEmail" class="sr-only">Email</label>
  <%= f.email_field :email, id: 'inputEmail', class: 'form-control', required: true, autofocus: true, autocomplete: "email", placeholder: 'Informe seu email aqui' %>
  <label for="inputPassword" class="sr-only">Senha</label>
  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, placeholder: 'Informe sua senha' %>
  <button class="btn btn-lg btn-secundary btn-block" type="submit">Acessar</button>
<% end %>
